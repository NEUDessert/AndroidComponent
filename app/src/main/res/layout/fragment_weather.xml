<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
        <ScrollView
            android:id="@+id/login_form"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!--虚伪的分割块-->
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@color/transParent"/>

                <!--第一块-->
                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <!--虚伪的分割块-->
                    <ImageView
                        android:layout_width="3dp"
                        android:layout_height="match_parent"
                        android:background="@color/transParent"/>

                    <!--温度块-->
                    <dessert.chenxi.li.dessert_ui.dashboardView.view.DashboardView
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:id="@+id/dashboard_tmp"
                    android:background="@color/bg_gray"/>

                    <!--虚伪的分割块-->
                    <ImageView
                    android:layout_width="3dp"
                    android:layout_height="match_parent"
                    android:background="@color/transParent"/>

                    <!--天气和湿度-->
                    <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                        <!--天气块-->
                        <ImageView
                            android:id="@+id/iv_weather_item"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:background="@color/bg_gray"
                            android:src="@drawable/thunder" />

                        <!--虚伪的分割块-->
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="3dp"
                            android:background="@color/transParent"/>

                        <!--湿度块-->
                        <LinearLayout
                            android:layout_width="100dp"
                            android:layout_height="147dp"
                            android:background="@color/bg_gray"
                            android:orientation="vertical"
                            android:id="@+id/linearLayout2">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="50dp"
                                    android:text="@string/current_hum"
                                    android:textSize="40sp"
                                    android:textColor="@color/white"
                                    android:layout_gravity="center" />

                                <TextView
                                    android:id="@+id/tv_hum"
                                    android:layout_width="wrap_content"
                                    android:layout_height="45dp"
                                    android:textSize="40sp"
                                    android:textColor="@color/white"
                                    android:layout_gravity="center_horizontal"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:text="@string/current_hum_unit"
                                    android:textSize="20sp"
                                    android:textColor="@color/white"
                                    android:layout_gravity="center" />
                        </LinearLayout>
                </LinearLayout>

                    <!--虚伪的分割块-->
                    <ImageView
                    android:layout_width="3dp"
                    android:layout_height="match_parent"
                    android:background="@color/transParent"/>

                    </LinearLayout>

                <!--虚伪的分割块-->
                <ImageView
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/transParent"/>

                <!--第二块-->
                <LinearLayout
                android:layout_width="360dp"
                android:layout_height="263dp"
                android:orientation="vertical">

                    <!--pm2.5块-->
                    <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="horizontal">

                        <!--虚伪的分割块-->
                        <ImageView
                            android:layout_width="3dp"
                            android:layout_height="match_parent"
                            android:background="@color/transParent"/>

                        <TextView
                            android:layout_width="70dp"
                            android:layout_height="match_parent"
                            android:text="@string/current_PM"
                            android:textSize="40sp"
                            android:textColor="@color/white"
                            android:background="@color/bg_gray"/>
                        <TextView
                            android:id="@+id/tv_pm25"
                            android:layout_width="142dp"
                            android:layout_height="match_parent"
                            android:textSize="80sp"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:background="@color/bg_gray"/>
                        <TextView
                            android:layout_width="142dp"
                            android:layout_height="match_parent"
                            android:text="@string/current_PM_unit"
                            android:textSize="40sp"
                            android:textColor="@color/white"
                            android:gravity="bottom"
                            android:background="@color/bg_gray"/>

                        <!--虚伪的分割块-->
                        <ImageView
                            android:layout_width="3dp"
                            android:layout_height="match_parent"
                            android:background="@color/transParent"/>

                </LinearLayout>

                    <!--虚伪的分割块-->
                    <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@color/transParent"/>

                    <!--警报块-->
                    <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="horizontal">

                        <!--虚伪的分割块-->
                        <ImageView
                            android:layout_width="3dp"
                            android:layout_height="match_parent"
                            android:background="@color/transParent"/>

                        <!--燃气警报块-->
                        <LinearLayout
                            android:id="@+id/ly_gasWaring"
                            android:layout_width="175.5dp"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:background="@color/bg_gray">

                                <TextView
                                    android:layout_width="100dp"
                                    android:layout_height="match_parent"
                                    android:text="@string/gas_warning"
                                    android:textSize="40sp"
                                    android:textColor="@color/white"/>

                                <TextView
                                    android:id="@+id/tv_gasWarning"
                                    android:layout_width="80dp"
                                    android:layout_height="match_parent"
                                    android:text="@string/safe"
                                    android:textSize="40sp"
                                    android:textColor="@color/white"
                                    android:gravity="center"/>
                        </LinearLayout>

                        <!--虚伪的分割块-->
                        <ImageView
                            android:layout_width="3dp"
                            android:layout_height="match_parent"
                            android:background="@color/transParent"/>

                        <!--烟雾警报块-->
                        <LinearLayout
                            android:id="@+id/ly_fireWaring"
                            android:layout_width="175.5dp"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:background="@color/bg_gray">

                                <TextView
                                    android:layout_width="100dp"
                                    android:layout_height="match_parent"
                                    android:text="@string/fire_waring"
                                    android:textSize="40sp"
                                    android:textColor="@color/white"/>
                                <TextView
                                    android:id="@+id/tv_fireWarning"
                                    android:layout_width="80dp"
                                    android:layout_height="match_parent"
                                    android:text="@string/safe"
                                    android:textSize="40sp"
                                    android:textColor="@color/white"
                                    android:gravity="center"/>

                        </LinearLayout>

                        <!--虚伪的分割块-->
                        <ImageView
                            android:layout_width="3dp"
                            android:layout_height="match_parent"
                            android:background="@color/transParent"/>

                </LinearLayout>

                    <!--虚伪的分割块-->
                    <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@color/transParent"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <!--虚伪的分割块-->
                        <ImageView
                            android:layout_width="3dp"
                            android:layout_height="match_parent"
                            android:background="@color/transParent"/>

                        <TextView
                            android:id="@+id/tv_everyDay"
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:text="@string/futureWeather"
                            android:textSize="20sp"
                            android:textColor="@color/white"
                            android:background="@color/bg_gray"/>

                        <!--虚伪的分割块-->
                        <ImageView
                            android:layout_width="3dp"
                            android:layout_height="match_parent"
                            android:background="@color/transParent"/>

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/thunder"
                            android:background="@color/bg_gray"/>

                        <!--虚伪的分割块-->
                        <ImageView
                            android:layout_width="3dp"
                            android:layout_height="match_parent"
                            android:background="@color/transParent"/>

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/thunder"
                            android:background="@color/bg_gray"/>

                        <!--虚伪的分割块-->
                        <ImageView
                            android:layout_width="3dp"
                            android:layout_height="match_parent"
                            android:background="@color/transParent"/>

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/thunder"
                            android:background="@color/bg_gray"/>

                        <!--虚伪的分割块-->
                        <ImageView
                            android:layout_width="3dp"
                            android:layout_height="match_parent"
                            android:background="@color/transParent"/>

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/thunder"
                            android:background="@color/bg_gray"/>

                        <!--虚伪的分割块-->
                        <ImageView
                            android:layout_width="3dp"
                            android:layout_height="match_parent"
                            android:background="@color/transParent"/>

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/thunder"
                            android:background="@color/bg_gray"/>

                        <!--虚伪的分割块-->
                        <ImageView
                            android:layout_width="3dp"
                            android:layout_height="match_parent"
                            android:background="@color/transParent"/>

                        <TextView
                            android:id="@+id/tv_clickForMore"
                            android:layout_width="36dp"
                            android:layout_height="match_parent"
                            android:text="@string/clickForMore"
                            android:textSize="20sp"
                            android:textColor="@color/white"
                            android:background="@color/bg_gray"
                            android:gravity="center"/>

                        <!--虚伪的分割块-->
                        <ImageView
                            android:layout_width="3dp"
                            android:layout_height="match_parent"
                            android:background="@color/transParent"/>
                    </LinearLayout>
                    <!--虚伪的分割块-->
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:background="@color/transParent"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
</LinearLayout>